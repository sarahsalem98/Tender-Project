@model Supplier
@{
    ViewData["Title"] = "Details";

}

<div class="app-content content ecommerce-application">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-start mb-0">Supplier #@Model.Id Details</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a  asp-action="Index" asp-controller="Supplier"  asp-area="Admin">Index</a>
                                </li>
                               
                                <li class="breadcrumb-item active">
                                    Details
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
        <div class="content-body">
            <!-- app e-commerce details start -->
            <ul class="nav nav-pills mb-2">
                <!-- account -->
                <li class="nav-item">
                    <a class="nav-link active" href="page-account-settings-account.html">
                        <i data-feather="user" class="font-medium-3 me-50"></i>
                        <span class="fw-bold">Basic Info</span>
                    </a>
                </li>
                <!-- security -->
                <li class="nav-item">
                    <a class="nav-link" href="page-account-settings-security.html">
                        <i data-feather="briefcase" class="font-medium-3 me-50"></i>
                        <span class="fw-bold">Purchased Tenders</span>
                    </a>
                </li>
                <!-- billing and plans -->
                <li class="nav-item">
                    <a class="nav-link" href="page-account-settings-billing.html">
                        <i data-feather="award" class="font-medium-3 me-50"></i>
                        <span class="fw-bold">Tarsia Tenders</span>
                    </a>
                </li>
                <!-- notification -->
                <li class="nav-item">
                    <a class="nav-link" href="page-account-settings-notifications.html">
                        <i data-feather="paperclip" class="font-medium-3 me-50"></i>
                        <span class="fw-bold">Offers</span>
                    </a>
                </li>
              
            </ul>
            <section class="app-ecommerce-details">
                <div class="card">
                    <!-- Product Details starts -->
                    <div class="card-body">
                        <div class="row my-2 ">
                            <div class="col-12 col-md-4  d-flex align-items-start justify-content-center mb-2 mb-md-0">
                                <div class="d-flex align-items-center justify-content-center">
                                    <img src="~/Dashboard/app-assets/images/pages/eCommerce/1.png" class="img-fluid product-img" alt="product image" />
                                </div>
                            </div>
                            <div class="col-12 col-md-8">
                                <h2 >  @Model.Name</h2>
                             <hr />
                                <div class="row ">
                                    <div class="col-6">
                                        <label class="form-label" >Email</label>
                                        <div class="input-group input-group-merge">
                                            <input type="email"  class="form-control" asp-for="@Model.Email" placeholder="Email" disabled>
                                        </div>
                                    </div>
                                   @* <div class="col-6">
                                        <label class="form-label" >Activity</label>
                                        <div class="input-group input-group-merge">
                                            <input type="email"  class="form-control" asp-for="@Model.SupplierActivity.Name_Ar" placeholder="Email" disabled>
                                        </div>
                                    </div>*@
                                </div>
                                <div class="row ">
                                    <div class="col-6">
                                        <label class="form-label" >Commercial Registeration Number</label>
                                        <div class="input-group input-group-merge">
                                            <input type="text"  class="form-control" asp-for="@Model.CommercialRegisterationNumber"  disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">Buying Date</label>
                                        <div class="input-group input-group-merge">
                                            <input type="text"  class="form-control" asp-for="@Model.BuyingDate" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row ">
                                    <div class="col-6">
                                        <label class="form-label" >Withdrawel date</label>
                                        <div class="input-group input-group-merge">
                                            <input type="text"  class="form-control" asp-for="@Model.WithdrawelDate"  disabled>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label" >End Date </label>
                                        <div class="input-group input-group-merge">
                                            <input type="text"  class="form-control" asp-for="@Model.EndDate"  disabled>
                                        </div>
                                    </div>
                                </div>

                               

                            </div>
                            <h3 class="text-info">Supplier Delegate Info </h3>
                            <hr />
                            
                            <div class="row justify-content-center">

                                <div class="col-md-12 align-self-center ">
                                    <div class="card shadow-none bg-transparent border-info">
                                        <div class="card-header">
                                            <h4 class="card-title"> @Model.SupplierDelegate?.Name</h4>
                                        </div>
                                        <div class="card-body">
                                          
                                            <dl class="row">
                                                <dt class="col-sm-3">JobTitle</dt>
                                                <dd class="col-sm-9"> @Model.SupplierDelegate?.JobTitle</dd>
                                            </dl>
                                            <dl class="row">
                                                <dt class="col-sm-3">Email</dt>
                                                <dd class="col-sm-9">@Model.SupplierDelegate?.Email</dd>
                                            </dl>
                                            <dl class="row">
                                                <dt class="col-sm-3">PhoneNumber</dt>
                                                <dd class="col-sm-9">@Model.SupplierDelegate?.PhoneNumber</dd>
                                            </dl>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                            <h3 class="text-primary">supplier branches</h3>
                            <hr />
                            @foreach(var supplierBranch in Model.SupplierBranch)
                            {
                                <div class="row justify-content-center">
                                    <div class="col-md-12 align-self-center ">
                                        <div class="card shadow-none bg-transparent border-primary">

                                        <div class="card-header">
                                            <h4 class="card-title"> @supplierBranch?.Address</h4>
                               
                                        </div>
                                            <div class="card-body">

                                                <dl class="row">
                                                    <dt class="col-sm-3">City</dt>
                                                    <dd class="col-sm-9"> @supplierBranch.City?.Name_En</dd>
                                                </dl>
                                                <dl class="row">
                                                    <dt class="col-sm-3">Governoment</dt>
                                                    <dd class="col-sm-9">@supplierBranch.Government?.Name_En</dd>
                                                </dl>
                                                <dl class="row">
                                                    <dt class="col-sm-3">Address</dt>
                                                    <dd class="col-sm-9">@supplierBranch?.Address</dd>
                                                </dl>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <dl class="row">
                                                            <dt class="col-sm-5">PhoneNumber1</dt>
                                                            <dd class="col-sm-7">@supplierBranch?.PhoneNumber1  </dd>
                                                        </dl>


                                                    </div>
                                                    <div class="col-6">
                                                        <dl class="row">
                                                            <dt class="col-sm-5">PhoneNumber2</dt>
                                                            <dd class="col-sm-7">@supplierBranch?.PhoneNumber2 </dd>
                                                        </dl>


                                                    </div>
                                                </div>
                                               
                                           </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                          
                                
                            <hr>
                            <div class="row justify-content-center">
                              
                                @if (Model.Status != 2)
                                {
                                    
                                <div class=" col-md-6 justify-content-center align-items-center">

                                        <a href="javascript:void(0);" onclick="supplier.activate(@Model.Id)" class="btn btn-primary btn-cart me-0 me-sm-1 mb-1 mb-sm-0 w-100">
                                        <i data-feather="check" class="me-50"></i>
                                        <span class="add-to-cart">Activate</span>
                                    </a>

                                </div>
                                }
                                @if(Model.Status!=3 && Model.Status != 1 && Model.Status!=4)
                                {
                                    <div class=" col-md-6 justify-content-center align-items-center">

                                        <a href="javascript:void(0);" onclick="supplier.deactivate(@Model.Id)" class="btn btn-warning btn-cart me-0 me-sm-1 mb-1 mb-sm-0 w-100">
                                            <i data-feather="slash" class="me-50"></i>
                                            <span class="add-to-cart">Deactivate</span>
                                        </a>

                                    </div>
                                }
                                @if (Model.Status != 4)
                                {
                                    
                                <div class="col-md-6 justify-content-center align-items-center">
                                        <a href="javascript:void(0);" onclick="supplier.decline(@Model.Id)" class="btn btn-danger btn-cart me-0 me-sm-1 mb-1 mb-sm-0 w-100">
                                        <i data-feather="x" class="me-50"></i>
                                        <span class="add-to-cart">Decline</span>
                                    </a>

                                </div>
                                }
                            </div>
                               
                               

                        </div>
                     
                    </div>
                </div>
                    
               
            </section>
          

        </div>
    </div>
</div>
@section Scripts{
    <script src="~/custome-js/admin/supplier.js"> </script>
}

