                        </div >


                        </div>*@

                    </div>

                    <div class="card-datatable table-responsive pt-0">
                        <div class="card-header ">
                            <h4 class="card-title">All Employees  </h4>
                        </div>
                        <table class="table" id="employeeTbl">

                            <thead class="table-light">
                                <tr>


                                    <th>id</th>
                                    <th>name</th>
                                    <th>email</th>
                                    <th>phone number</th>
                                    <th>role</th>

                                    <th>action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>


                </div>
                <!-- list and filter end -->
            </section>
            <!-- users list ends -->
       
        </div>

    </div>
</div>


