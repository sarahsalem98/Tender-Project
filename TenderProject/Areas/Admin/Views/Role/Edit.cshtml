
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["iaAdd"] = false;
}

<partial name="_AddEditRole" />

@section Scripts{

    <script src="~/custome-js/admin/role.js"></script>
    <script>
        $(document).ready(function () {
            var adminCheck = document.querySelector("#admin-check");
            var inputs = document.querySelectorAll("#permission-Check");
            var allChecked=true;

            adminCheck.addEventListener("change", function () {
                var adminChecked = this.checked;
                inputs.forEach(function (input) {

                    input.checked = adminChecked;
                });


            });
            
            inputs.forEach(function (input) {
                if(!input.checked){
                    allChecked=false;
                }

                input.addEventListener("change", function () {
                    if (adminCheck.checked) {
                        adminCheck.checked = false;
                    }
                  
                });



            });

          
            adminCheck.checked = allChecked;
          

        });

    </script>
}

